{
    // Settings
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 120],

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "git.autofetch": false,
    "git.enableCommitSigning": true,

    // Colours
    "workbench.colorTheme": "Dracula",    
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#f78bab"
    },

    // File type-specific
    "files.associations": {
        ".aliases": "shellscript",
        ".functions": "shellscript",
        "*.bc": "llvm",
        ".bashrc.local": "shellscript",
        ".zshrc.local": "shellscript",
        ".bashrc.pre": "shellscript",
        ".inputrc": "shellscript",
        "*.sty": "latex"
    },
    "[latex]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.suggestSelection": "recentlyUsedByPrefix",
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
    },
    "[python]": {
        "editor.autoIndent": "full",
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.fontSize": 16,
        "editor.tabSize": 4,
        "editor.detectIndentation": false,
        "editor.insertSpaces": false
    },

    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipes":[
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "bibtex",
            "tools": [
                "bibtex"
            ]
        }
    ],

    "python.pythonPath": "/usr/local/bin/python3",

    "spellright.spellContextByClass": {
        "latex": "body"
    },
    "spellright.ignoreFiles": [
        "**/.gitignore",
        "**/.spellignore",
        "**/*.dump",
        "**/*.out"
    ],
    "spellright.groupDictionaries": false,

    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.fontSize": 13,
    "extensions.ignoreRecommendations": true,
    "editor.minimap.enabled": false,
    "editor.fontSize": 16,
    "workbench.startupEditor": "newUntitledFile",
    "editor.maxTokenizationLineLength": 100000,
    "explorer.autoReveal": "focusNoScroll",
    "markdown.extension.list.indentationSize": "inherit",
    "python.showStartPage": false,
    "todo-tree.tree.showScanModeButton": false,
    "editor.largeFileOptimizations": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "json.maxItemsComputed": 100000000,
    "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "remote.SSH.connectTimeout": 30,
    "terminal.integrated.sendKeybindingsToShell": true,
    "markdown.preview.openMarkdownLinks": "inEditor",
    "workbench.editor.revealIfOpen": true,
    "vscode-pets.theme": "beach",
    "vscode-pets.throwBallWithMouse": true,
    "telemetry.telemetryLevel": "off",
    "window.zoomLevel": -1,
    "cmake.showOptionsMovedNotification": false,
    "fortran.fortls.path": "/Users/andy/Library/Python/3.11/bin/",
    "fortran.formatting.path": "/Users/andy/Library/Python/3.11/bin/",
    "git.confirmSync": false,
    "fortran.notifications.releaseNotes": false,
    "python.createEnvironment.trigger": "off",
    "[javascript]": {
        "editor.defaultFormatter": "numso.prettier-standard-vscode"
    },
    "python.analysis.typeCheckingMode": "basic"
}